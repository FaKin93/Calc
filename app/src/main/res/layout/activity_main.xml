<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:textSize="40pt"
        android:background="@color/lite_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:gravity="right|center"
        android:layout_weight="1"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonAC"
                android:onClick="acClick"
                android:text="AC"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"
                />
            <Button
                android:id="@+id/buttonPlusMinus"
                android:onClick="clickNumber"
                android:text="+/-"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"
                />
            <Button
                android:id="@+id/buttonProcent"
                android:text="%"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"
                />
            <Button
                android:id="@+id/buttonDivide"
                android:onClick="Operation"
                android:text="/"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/orange"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/button7"
                android:onClick="clickNumber"
                android:text="7"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/button8"
                android:text="8"
                android:onClick="clickNumber"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/button9"
                android:onClick="clickNumber"
                android:text="9"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/buttonMultiply"
                android:onClick="Operation"
                android:text="*"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/orange"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/button4"
                android:onClick="clickNumber"
                android:text="4"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/button5"
                android:onClick="clickNumber"
                android:text="5"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/button6"
                android:onClick="clickNumber"
                android:text="6"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/buttonMinus"
                android:onClick="Operation"
                android:text="-"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/orange"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/button1"
                android:text="1"
                android:onClick="clickNumber"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/button2"
                android:text="2"
                android:onClick="clickNumber"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/button3"
                android:text="3"
                android:onClick="clickNumber"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/buttonPlus"
                android:onClick="Operation"
                android:text="+"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/orange"
                />
        </TableRow>
    </TableLayout>
 <LinearLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >
     <TableRow
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <Button
             android:id="@+id/button0"
             android:text="0"
             android:onClick="clickNumber"
             android:height="30pt"
             android:width="30pt"
             android:layout_weight="2"
             android:layout_marginRight="1pt"
             android:backgroundTint="@color/black"
             />
         <Button
             android:id="@+id/buttonPoint"
             android:onClick="clickNumber"
             android:text="."
             android:height="30pt"
             android:width="30pt"
             android:layout_weight="3"
             android:layout_marginRight="1pt"
             android:backgroundTint="@color/black"
             />
         <Button
             android:id="@+id/buttonEqual"
             android:onClick="clickEqual"
             android:text="="
             android:height="30pt"
             android:width="30pt"
             android:layout_weight="3"
             android:layout_marginRight="1pt"
             android:backgroundTint="@color/orange"
             />
     </TableRow>
 </LinearLayout>
</LinearLayout>